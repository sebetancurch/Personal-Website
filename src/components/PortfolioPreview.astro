---
const { project } = Astro.props;
import Tags from "./Tags.astro";
---

<a class="card" href={project.html_url} aria-label="link to project">
  <div class="image">
    <img src="/assets/project.png" width={400} height={400} loading="eager" />
  </div>
  <div class="details">
    <h3>{project.name}</h3>
    <p>{project.description}</p>
    <Tags tags={project.topics} />
  </div>
</a>

<style>
  .card {
    width: 100%;
    text-decoration-line: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--gradient-subtle);
    padding: 0.75rem;
    border-radius: 0.75rem;
    transition-duration: 100ms;
  }

  .card:hover {
    transform: scale(1.05);
    transform: scale(1.05);
  }

  .image {
    display: flex;
    overflow: hidden;
    position: relative;
    align-items: flex-end;
    border-radius: 0.75rem;
  }

  .details {
    padding: 0.5rem;
    margin-top: 0.25rem;
  }

  .details h3 {
    margin: 1rem 0rem;
    color: orange;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
  }

  .details p {
    font-size: var(--text-md);
    color: var(--gray-300);
  }
</style>
